<% if @student.errors.any? %>
    <div class="container">
        <div class="row sign-up-form">
            <div class="col s12 m12 l12">
                <div class="card-panel red lighten-2">
                    <span class="white-text">
                        <%= pluralize(@student.errors.count, "error") %>
                        prohibited your profile from being created!
                        <ul>
                            <% @student.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>
                    </span>
                </div>
            </div>
        </div>
    </div>
<% end %>

<div class ="container">
    <div class="row center sign-up-form">
        <div class="col s12 m12 l12">
            <div class="card-panel">
                <h3 class='header'>Enroll Here!</h3>
                <div class="row">
                    <%= form_for(@student, html: {class: "col s12"}) do |f| %>
                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.label :name %>
                                <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true  %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.label :email %>
                                <%= f.email_field :email, placeholder: "Enter your email address" %>
                            </div>
                        </div>                
                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.button "Sign Up", class: "btn light-blue darken-3 waves-effect waves-light right" %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
