<div class ="container">
    <div class="row center sign-up-form">
        <div class="col s12 m12 l12">
            <div class="card-panel">
                <h3 class='header'>Log In</h3>
                <div class="row">
                    <%= form_for(:logins, html: {class: "col s12"}) do |f| %>
                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.label :email, class: "active" %>
                                <%= f.email_field :email, placeholder: "Enter your email address", autofocus: true %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.label :password, class: "active" %>
                                <%= f.password_field :password, placeholder: "Enter Your Password" %>
                            </div>
                        </div>         
                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.button'<i class="material-icons right">arrow_forward</i>Log In'.html_safe,
                                class: "btn light-blue darken-3 waves-effect waves-light right  " %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
